@model MAVİRESTAURANT.Models.Entity.Kategori

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="content-wrapper">
    <div class="container-fluid">

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i>Kategori Ekleme Formu</h4> <br />

            </div>

            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("KategoriEkle", "KategoriAdmin", FormMethod.Post, new { @enctype = "multipart/form-data" }))

                    {


                        <table class="table table-bordered" width="100" cellspacing="0">

                            <tr>
                                <td>Kategori:</td>
                                <td>
                                    @Html.TextBoxFor(m=>m.Kategori_adi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Kategori_adi)
                                </td>
                            </tr>
                           
                        </table>
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                    }

                </div>
            </div>
        </div>
    </div>
</div>

