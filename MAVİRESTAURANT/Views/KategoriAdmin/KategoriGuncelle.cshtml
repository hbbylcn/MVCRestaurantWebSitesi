@model MAVİRESTAURANT.Models.Entity.Kategori

@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-wrapper">
    <div class="container-fluid">

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i>Kategori Güncelleme</h4> <br />

            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <table class="table table-bordered" width="100" cellspacing="0">

                            <tr>
                                <td>Kategori Adı:</td>
                                <td>
                                    @Html.TextBoxFor(m => m.Kategori_adi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Kategori_adi)
                                </td>
                            </tr>
                        </table>
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>


