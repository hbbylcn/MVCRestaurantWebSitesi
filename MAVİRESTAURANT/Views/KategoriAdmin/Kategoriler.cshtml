@model List<MAVİRESTAURANT.Models.Entity.Kategori>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-wrapper">

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">

            <h4><i class="fas fa-table"></i>Kategoriler listesi</h4> <br />
            @Html.ActionLink("Yeni Kategori Ekle", "KategoriEkle", null, new { @class = "btn btn-primary mx-4" })
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kategori Id</th>
                            <th>Kategori Adı</th>
                            <th>Güncelle</th>
                            <th>Sil</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var kategori in Model)
                        {

                            <tr>
                                <td>@kategori.Kategori_Id</td>
                                <td>@kategori.Kategori_adi</td>

                                <td>@Html.ActionLink("Güncelle", "KategoriGuncelle", new { kategori.Kategori_Id }, new { @class = "btn btn-info mx-4" })</td>

                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Sil_@kategori.Kategori_Id">
                                        Sil
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="Sil_@kategori.Kategori_Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">Kategori Sil</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <h4>Ürünü silmek istiyor musunuz?</h4>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary mx-4" data-dismiss="modal">Vazgeç</button>
                                                    @Html.ActionLink("Sil", "KategoriSil", new { kategori.Kategori_Id }, new { @class = "btn btn-danger mx-4" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="~/Content/Admin/js/sweetalert.min.js"></script>

