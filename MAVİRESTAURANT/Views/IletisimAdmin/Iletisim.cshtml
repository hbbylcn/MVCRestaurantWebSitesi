
@model IEnumerable<MAVİRESTAURANT.Models.Entity.IletisimBilgileri>
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-wrapper">

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">

            <h4><i class="fas fa-table"></i>İletişim Bilgisi Listesi</h4> <br />

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>İletişim ID</th>
                            <th>E-Posta</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>Harita Yolu</th>
                            <th>Güncelle</th>
                          

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var iletisim in Model)
                        {

                            <tr>
                                <td>@iletisim.Iletisimbilgi_Id</td>
                                <td>@iletisim.Eposta</td>
                                <td>@iletisim.Adres</td>
                                <td>@iletisim.Tel</td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter_@iletisim.Iletisimbilgi_Id">
                                        İçeriği Oku
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalCenter_@iletisim.Iletisimbilgi_Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">İçerik</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @Html.Raw(iletisim.HaritaYolu)
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                <td>@Html.ActionLink("Güncelle", "IletisimBilgisi_Guncelle", new { iletisim.Iletisimbilgi_Id }, new { @class = "btn btn-info mx-4" })</td>

                              

                            </tr>
                        }
                    </tbody>
                </table>
            

            </div>
        </div>
    </div>
</div>


<script src="~/Content/Admin/js/sweetalert.min.js"></script>

