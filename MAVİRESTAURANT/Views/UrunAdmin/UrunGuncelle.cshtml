@model MAVİRESTAURANT.Models.Entity.Urunler

@{
    ViewBag.Title = "Ürun Güncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-wrapper">
    <div class="container-fluid">

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i>Ürün Güncelleme</h4> <br />
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <table class="table table-bordered" width="100" cellspacing="0">

                            <tr>
                                <td>Ürün Kodu</td>
                                <td>
                                    @Html.EditorFor(model => model.UrunKod, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UrunKod, "", new { @class = "text-danger" })

                                </td>
                            </tr>

                            <tr>
                                <td>Kategori:</td>
                                <td>
                                    @Html.DropDownListFor(m => m.Kategori1.Kategori_Id, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Kategori, "", new { @class = "text-danger" })

                                </td>
                            </tr>
                            <tr>
                                <td>Ürün Adı:</td>
                                <td>
                                    @Html.EditorFor(model => model.UrunAd, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UrunAd, "", new { @class = "text-danger" })

                                </td>
                            </tr>
                            <tr>
                                <td>Stok</td>
                                <td>
                                    @Html.EditorFor(model => model.Stok, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Stok, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>Resim:</td>
                                <td>
                                    @Html.DropDownListFor(m => m.Resim.Resim_Id, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.UrunResim, "", new { @class = "text-danger" })

                                </td>
                            </tr>

                            <tr>
                                <td>Fiyat:</td>
                                <td>
                                    @Html.EditorFor(model => model.Fiyat, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Fiyat, "", new { @class = "text-danger" })

                                </td>
                            </tr>
                            <tr>
                                <td>Açıklama:</td>
                                <td>
                                    @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })

                                </td>
                            </tr>
                            <tr>
                                <td>Aktiflik Durumu:</td>
                                <td>
                                    @Html.RadioButtonFor(m => m.Durum, true)@Html.Label("Aktif")
                                    @Html.RadioButtonFor(m => m.Durum, false)@Html.Label("Aktif Değil")

                                </td>
                            </tr>

                        </table>
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

