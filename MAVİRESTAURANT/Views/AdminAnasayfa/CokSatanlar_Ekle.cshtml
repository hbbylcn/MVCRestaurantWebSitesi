@model MAVİRESTAURANT.Models.Entity.CokSatanlar

@{
    ViewBag.Title = "Çok Satanlar Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Çok Satanlar Ekle</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UrunId, "UrunId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Urunler.UrunId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}
