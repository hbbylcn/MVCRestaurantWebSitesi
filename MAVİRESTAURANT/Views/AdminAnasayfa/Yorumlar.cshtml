@model IEnumerable<MAVİRESTAURANT.Models.Entity.Yorum>
@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="content-wrapper">

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">

            <h4><i class="fas fa-table"></i>Sizden Gelenler Bölümü</h4> <br />
            <a href="~/Admin/UrunEkle" />
            @Html.ActionLink("Yeni Veri Ekle", "Yorumlar_Ekle", null, new { @class = "btn btn-primary mx-4" })
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100" cellspacing="0">
                    <thead>
                        <tr>
                            <td>ID</td>
                            <th>Yorum</th>
                            <th>Adı-Soyadı</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var yorum in Model)
                        {

                            <tr>
                                <td>@yorum.Yorum_Id</td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter_@yorum.Yorum_Id">
                                        İçeriği Oku
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalCenter_@yorum.Yorum_Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">İçerik</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @Html.Raw(yorum.Yorum1)
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>@yorum.AdSoyad</td>
                                <td>@Html.ActionLink("Güncelle", "Yorumlar_Guncelle", new { @yorum.Yorum_Id }, new { @class = "btn btn-info mx-4" })</td>

                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Sil_@yorum.Yorum_Id">
                                        Sil
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="Sil_@yorum.Yorum_Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">Veri Sil</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <h4>Ürünü silmek istiyor musunuz?</h4>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary mx-4" data-dismiss="modal">Vazgeç</button>
                                                    @Html.ActionLink("Sil", "Yorumlar_Sil", new { @yorum.Yorum_Id }, new { @class = "btn btn-danger mx-4" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/Admin/css/switch.css" rel="stylesheet" />
<script src="~/Content/Admin/js/sweetalert.min.js"></script>
