@model IEnumerable<MAVİRESTAURANT.Models.Entity.CalismaPlani>
@{
    ViewBag.Title = "Çalısma Saatleri";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-wrapper">

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">

            <h4><i class="fas fa-table"></i>Çalışma Saatleri Bölümü</h4> <br />
           
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100" cellspacing="0">
                    <thead>
                        <tr>
                            <td>ID</td>
                            <th>Gün</th>
                            <th>Saat</th>
                            <th>Güncelle</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var saat in Model)
                        {

                            <tr>
                                <td>@saat.Calısma_Id</td>
                                <td>@saat.Gün</td>
                                <td>@saat.Saat</td>
                                <td>@Html.ActionLink("Güncelle", "CalismaSaatleri_Guncelle", new { @saat.Calısma_Id }, new { @class = "btn btn-info mx-4" })</td>

                               

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/Admin/css/switch.css" rel="stylesheet" />
<script src="~/Content/Admin/js/sweetalert.min.js"></script>

