@model MAVİRESTAURANT.Models.Entity.CokSatanlar

@{
    ViewBag.Title = "Çok Satanlar Güncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-wrapper">
    <div class="container-fluid">

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i>Kısa Hakkımızda Güncelle</h4> <br />

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <table class="table table-bordered" width="100" cellspacing="0">
                            <tr>
                                <td>Ürün Adı:</td>
                                <td>
                                    @Html.DropDownListFor(m => m.Urunler.UrunId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.UrunId, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                        </table>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kaydet" class="btn btn-success" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



