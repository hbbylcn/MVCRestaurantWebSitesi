        line-height: 24px;
        font-family: "Open Sans", sans-serif;
        color: #008b8b;
        font-weight: 400;
    }

    .table-content table td.product-thumbnail {
        width: 130px;
    }

    .table-content table td {
        border-top: medium none;
        font-size: 14px;
        padding: 20px 10px;
        text-align: center;
