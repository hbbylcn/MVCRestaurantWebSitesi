@section Scripts{

    <script>
    $(document).ready(function() {
        
            $.ajax({
                 url: '/Odeme/GetSepet',
                 type :'GET',
                 success: function (data) {
                    $(".product").html(data);
                  }
             });

             $(document).on('click', '#test', function(){
                  var uId = $(this).attr("name");
                 $.ajax({
                        url: '/Odeme/UpdateSepet/' + uId,
                        Type :'GET',
                        success: function (data) {
                            $(".product").html(data);
                        }
                 });
            });

        $(".urunSil").click(function UrunSil() {
            var uId = $(this).attr("name");
            $.ajax({
                type: "GET",
                url: "/Odeme/UpdateSepet",
                data: { id: uId },
                success: function myfunction(data) {
                      $(".product").html(data);
                },
                error: function myfunction() {
                    alert("error");
                }
            });
        });
    })
    </script>
}