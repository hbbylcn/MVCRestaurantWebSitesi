@model IEnumerable<MAVİRESTAURANT.Models.Entity.Galeri>
@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-wrapper">

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">

            <h4><i class="fas fa-table"></i>Galeri</h4> <br />

            @Html.ActionLink("Yeni Veri Ekle", "GaleriResim_Ekle", null, new { @class = "btn btn-primary mx-4" })
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Galeri Resim ID</th>
                            <th>Galeri Resim Adı</th>
                            <th>Resim</th>
                            <th>Güncelle</th>
                            <th>Sil</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var galeri in Model)
                        {

                            <tr>
                                <td>@galeri.GaleriId</td>
                                <td>@galeri.Resim.ResimAd</td>
                                <td><img src="~/Content/Mavi/img/gallery/@galeri.Resim.ResimAd" width="150" /></td>



                                <td>@Html.ActionLink("Güncelle", "GaleriResim_Guncelle", new { galeri.GaleriId }, new { @class = "btn btn-info mx-4" })</td>

                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Sil_@galeri.GaleriId">
                                        Sil
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="Sil_@galeri.GaleriId" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">Ürün Sil</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <h4>Ürünü silmek istiyor musunuz?</h4>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary mx-4" data-dismiss="modal">Vazgeç</button>
                                                    @Html.ActionLink("Sil", "GaleriResim_Sil", new { galeri.GaleriId }, new { @class = "btn btn-danger mx-4" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

